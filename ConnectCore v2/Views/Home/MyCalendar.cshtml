@{
    ViewData["Title"] = "My Calendar";
}

<script>

    document.addEventListener('DOMContentLoaded', function() {
       var calendarEl = document.getElementById('calendar');
       var calendar = new FullCalendar.Calendar(calendarEl, {
           initialView: 'timeGridWeek',
           eventSources:[
                                              
                     @Html.Raw(ViewData["Events"]),
                   
                   @Html.Raw(ViewData["Hols"])
                   
                                                                                                  
           ] , 
           resources: @Html.Raw(ViewData["Resources"]),
           headerToolbar: {
               left: 'today prev,next',
               center: 'title',
               right: 'timeGridWeek,dayGridMonth,listMonth'
           },
           allDaySlot: false
       });
       calendar.render();
     });

</script>

<br />

<div class="card">
    <div class="card-header">
        <h3>Schedule Manager</h3>
    </div>

   
    <div class="card-body">

        <p>Holiday <i style="color:#4dffff" class="bi bi-square-fill"></i> Shift <i style="color:#0066ff" class="bi bi-square-fill"></i></p>
        

        <div class="text-center">          
            <div id='calendar'></div>
        </div>
    </div>

</div>

<br />
