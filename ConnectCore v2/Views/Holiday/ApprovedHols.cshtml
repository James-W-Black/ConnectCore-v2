@{
}

<br />

<form asp-action="CancelHolidays" id="cancel-holidays">
   
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="card">
    <div class="card-header">
        <h3>Approved Holidays</h3>
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <th>
                    Requested By
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End time
                </th>
                 <th>
                    Approved By
                </th>
                <th>
                    Cancel
                </th>

            </thead>
            <tbody>
                @foreach (var hol in Model)
                {
                    <tr>
                        <td>
                            @hol.User.FirstName @hol.User.LastName
                        </td>
                        <td>
                            @hol.StartTime
                        </td>
                        <td>
                            @hol.EndTime
                        </td>
                        <td>
                            @hol.ApprovedBy.Email
                        </td>
                        <td>
                                <input value="@hol.Id"  type="checkbox" name="HolIds" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

         <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Cancel" style="float:right" class="btn btn-md mybutton2" />
                       
                    </div>
                </div>
            </div>

    </div>

</div

</form>

     