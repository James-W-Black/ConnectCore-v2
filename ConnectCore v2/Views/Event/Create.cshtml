<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="create-Event">
            @Html.HiddenFor(m=>m.UserId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="padding-bottom:5px">
               
                <input asp-for="Event.Name" class="form-control required" />
               <label asp-for="Event.Name" class="form-label"></label>
            </div>
            <div class="form-floating" style="padding-bottom:5px">
                
                <input asp-for="Event.Description" class="form-control required" />
               <label asp-for="Event.Description" class="form-label"></label>
            </div>
            <div class="form-floating" style="padding-bottom:5px">
                
                <input asp-for="Event.StartTime" class="form-control required" />
                <label asp-for="Event.StartTime" class="form-label"></label>
            </div>
            <div class="form-floating" style="padding-bottom:5px">
                
                <input asp-for="Event.EndTime" class="form-control required" />
                <label asp-for="Event.EndTime" class="form-label"></label>
            </div>
            <div class="form-floating" style="padding-bottom:5px">
               
                @Html.DropDownList("User", Model.users, "Select a User", new { @class= "form-control required" })
                <label asp-for="Event.User" class="form-label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mysexybutton" />
            </div>
        </form>
    </div>
</div>

